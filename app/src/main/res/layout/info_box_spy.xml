<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/infoBoxSpyTV1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/info_box_spy_text_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoBoxSpyTV2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/info_box_spy_text_2"
        app:layout_constraintEnd_toEndOf="@+id/infoBoxSpyTV1"
        app:layout_constraintStart_toStartOf="@+id/infoBoxSpyTV1"
        app:layout_constraintTop_toBottomOf="@+id/infoBoxSpyTV1" />

    <TextView
        android:id="@+id/infoBoxSpyTV3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/info_box_spy_text_3"
        app:layout_constraintEnd_toEndOf="@+id/infoBoxSpyTV2"
        app:layout_constraintStart_toStartOf="@+id/infoBoxSpyTV2"
        app:layout_constraintTop_toBottomOf="@+id/infoBoxSpyTV2" />

    <TextView
        android:id="@+id/infoBoxSpyTV4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/info_box_spy_text_4"
        app:layout_constraintEnd_toEndOf="@+id/infoBoxSpyTV3"
        app:layout_constraintStart_toStartOf="@+id/infoBoxSpyTV3"
        app:layout_constraintTop_toBottomOf="@+id/infoBoxSpyTV3" />

    <CheckBox
        android:id="@+id/spyCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/do_not_show_again_cb"
        app:layout_constraintStart_toStartOf="@+id/infoBoxSpyTV4"
        app:layout_constraintTop_toBottomOf="@+id/infoBoxSpyTV4" />

    <Button
        android:id="@+id/okButtonSpy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/default_blue_color"
        android:text="@string/okay_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spyCB"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>